{% if section.settings.show_announcement %}
    <section>
        <div class="announcement-bar">
            <div class="announcement-bar-left-section">
                 {% if section.settings.image %}
                    <img 
                        width="40"
                        height="40"
                        loading="lazy" 
                        src="{{ section.settings.image | image_url }}" />
                    {% else %}
                        <img 
                            width="40"
                            height="40"
                            loading="lazy"
                            src="{{ 'a.png' | asset_url }}"
                        />
                 {% endif %}
                 {% if section.settings.image_2 %}
                    <img 
                        width="40"
                        height="40"
                        loading="lazy" 
                        src="{{ section.settings.image_2 | image_url }}" />
                    {% else %}
                        <img 
                            width="40"
                            height="40"
                            loading="lazy"
                            src="{{ 'b.png' | asset_url }}"
                        />
                 {% endif %}
            </div>
            <div class="announcement-bar-right-section">

            </div>
        </div>
    </section>
{% endif %}

<style>
    .announcement-bar{
        background : {{ section.settings.background_color }};
        color : {{ section.settings.text_color }}
    }
</style>

{% schema %}
{
    "name": "Announcement Bar",
    "settings": [
        {
            "type":"checkbox",
            "id":"show_announcement",
            "label":"Show Announcement",
            "default":true
        },
        {
            "type": "image_picker",
            "id":"image",
            "label": "Image",
            "info": "png recommended format"
        },
        {
            "type": "image_picker",
            "id":"image_2",
            "label": "Image",
            "info": "png recommended format"
        },
        {
            "type":"color",
            "id": "text_color",
            "label": "Text Color",
            "default":"#000000"
        },
        {
            "type":"color",
            "id": "background_color",
            "label": "Background Color",
            "default":"#F4F4F4",
        }
    ],
    "presets": [
        {
            "name": "announcement-bar"
        }
    ],
}
{% endschema %}